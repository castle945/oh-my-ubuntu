// Place your key bindings in this file to override the defaults
[
    {
        "key": "alt+`",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "alt+1",
        "command": "workbench.action.toggleMaximizeEditorGroup",
        "when": "editorPartMaximizedEditorGroup || editorPartMultipleEditorGroups"
    },
    {
        "key": "alt+2",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "alt+3",
        "command": "git.stageSelectedRanges",
        "when": "!operationInProgress"
    },
    {
        "key": "alt+4",
        "command": "gitlens.diffWithRevisionFrom"
    },
    {
        "key": "alt+z",
        "command": "editor.toggleFold",
        "when": "editorTextFocus && foldingEnabled"
    },
    {
        "key": "alt+x",
        "command": "editor.action.nextSelectionMatchFindAction",
        "when": "editorFocus"
    },
    {
        "key": "shift+alt+z",
        "command": "editor.foldAllExcept",
        "when": "editorTextFocus && foldingEnabled"
    },
    {
        "key": "shift+alt+x",
        "command": "editor.unfoldAll",
        "when": "editorTextFocus && foldingEnabled"
    },
    {
        "key": "shift+alt+a",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "shift+alt+d",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "ctrl+a",
        "command": "editor.action.selectAll"
    },
    {
        "key": "ctrl+cmd+`",
        "command": "runCommands",
        "args": {
            "commands":[
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.terminal.toggleTerminal",
            ]
        },
    },
    {
        "key": "cmd+shift+/",
        "command": "editor.action.blockComment"
    },
    {
        "key": "cmd+1",
        "command": "numberedBookmarks.jumpToBookmark1"
    },
    {
        "key": "cmd+2",
        "command": "numberedBookmarks.jumpToBookmark2"
    },
    {
        "key": "cmd+3",
        "command": "numberedBookmarks.jumpToBookmark3"
    },
    {
        "key": "cmd+4",
        "command": "numberedBookmarks.jumpToBookmark4"
    },
    {
        "key": "cmd+5",
        "command": "numberedBookmarks.jumpToBookmark5"
    },

]